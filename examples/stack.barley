-module(test).

-doc("Calculator").

global ST = stack:new().

eval(S) ->
    String = string:split(S),
    rpn(X) || X -> String,
    pop().

rpn("+") ->
    A = pop(),
    B = pop(),
    push(B + A).

rpn("-") ->
    A = pop(),
    B = pop(),
    push(B - A).

rpn("/") ->
    A = pop(),
    B = pop(),
    push(B / A).

rpn("*") ->
    A = pop(),
    B = pop(),
    push(B * A).

rpn(X) ->
    io:write("stack trace: "),
    stack_trace(),
    push(read(X)).

read(N) ->
    case string:as_number(N) ->
        of error: CaughtError.
        of Number: Number.
    end.

push(Value) -> stack:push(ST, Value).
pop() -> stack:pop(ST).
stack_trace() -> io:writeln(stack:stack_to_list(ST)).

main() ->
    io:fwriteln("result: " + eval("2 +")).
